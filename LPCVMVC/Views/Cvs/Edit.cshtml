@model LatvijasPasts.Core.Models.Cv

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit CV</h2>

<form asp-action="Edit" method="post">
    <div>
        <label>CV Id:</label>
        <input asp-for="Id" readonly />
    </div>

    <div>
        <button type="button" onclick="location.href='@Url.Action("EditPersonalData", "Cv", new { cvId = Model.Id })'">Edit Personal Data</button>
        <button type="button" onclick="location.href='@Url.Action("EditAddress", "Cv", new { cvId = Model.Id })'">Edit Address</button>
        <button type="button" onclick="location.href='@Url.Action("EditEducation", "Cv", new { cvId = Model.Id })'">Edit Education</button>
        <button type="button" onclick="location.href='@Url.Action("EditWorkExperience", "Cv", new { cvId = Model.Id })'">Edit Work Experience</button>
    </div>

    <div>
        <button type="submit">Save CV</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
